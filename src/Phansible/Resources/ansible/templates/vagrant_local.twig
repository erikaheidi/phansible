    config.vm.provider :virtualbox do |v|
        v.name = "{{ vmName }}"
        v.customize [
            "modifyvm", :id,
            "--name", "{{ vmName }}",
            "--memory", {{ memory }},
            "--natdnshostresolver1", "on",
            "--cpus", 1,
        ]
    end

