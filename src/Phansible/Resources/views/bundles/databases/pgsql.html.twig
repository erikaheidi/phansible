<div class="ui tab bottom attached segment" data-tab="pgsql">
    <div class="inline field">
        <div class="ui checkbox">
            <input type="checkbox" name="pgsql[install]" value="1" {% if pgsql.install %}checked="checked"{% endif %} />
            <label>Install PostgreSQL</label>
        </div>
    </div>
    <div class="three fields">
        <div class="field">
            <label for="database">Database:</label>
            <div class="ui disabled left labeled input">
                <input type="text" name="pgsql[database]" value="db" />
            </div>
        </div>

        <div class="field">
            <label for="user">User:</label>
            <div class="ui left labeled input">
                <input type="text" name="pgsql[user]" value="user" />
            </div>
        </div>

        <div class="field">
            <label for="database">Password:</label>
            <div class="ui left labeled input">
                <input type="text" name="pgsql[password]" value="password" />
                <div class="ui corner label">
                    <i class="icon asterisk"></i>
                </div>
            </div>
        </div>
    </div>
</div>
